<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Product List </h2>
            <p>Edit or delete a Product</p>
        </div>

    </div>
    <div class="card mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="productsTable">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price</th>
                            <th scope="col">Offer</th>
                            <th scope="col">Image</th>
                            <th scope="col" class="text-end"> Action </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td><b>{{this.Name}}</b></td>

                            <td>{{this.Category}}</td>
                            <td>{{this.description}}</td>
                            <td>Rs:{{this.Price}}</td>
                            <td>Rs:{{this.Offerprice}}</td>
                            <td>
                                {{!-- <img style="width:50px;height:50px;" src="/product-images/{{this._id}}.jpg"
                                    alt=""> --}}
                                <img style="width:50px;height:50px;" src="{{this.image.[0]}}" alt="">
                                <img style="width:50px;height:50px;" src="{{this.image.[1]}}" alt="">
                                <img style="width:50px;height:50px;" src="{{this.image.[2]}}" alt="">
                            </td>

                            <td class="text-end">
                                <a href="/admin/edit-product/{{this._id}}" class="btn btn-info rounded font-sm">Edit</a>
                                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger rounded font-sm"
                                    onclick="return confirm('Are you sure to delete {{this.Name}}?')">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div> <!-- table-responsive //end -->
        </div> <!-- card-body end// -->
    </div> <!-- card end// -->

</section> <!-- content-main end// -->


<script>
    $(document).ready(function () {
        $('#productsTable').DataTable();
    });
</script>